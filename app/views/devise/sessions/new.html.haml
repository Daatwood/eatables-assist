.section.container
  %h2.header.center.orange-text Log in
  .row
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .input-field.col.s12
        = f.email_field :email, autofocus: true
        = f.label :email
      .input-field.col.s12
        = f.password_field :password, autocomplete: :off
        = f.label :password
      - if devise_mapping.rememberable?
        .input-field.col.s12
          = f.check_box :remember_me
          = f.label :remember_me
      .center
        %button.btn.btn-large.waves-effect.waves-light.red{:name => "action", :type => "submit"}
          Log in

= render "devise/shared/links"
